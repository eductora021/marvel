{% extends 'base.html.twig' %}

{% block title %}Hello DetailController!{% endblock %}

{% block body %}
<div class="album py-5">
		<div class="container">
        <div class="row">
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="{{character_detail.image}}" class="card-img-top" alt="{{character_detail.name}}">
                    <div class="card-body">
                        <button data-id="{{character_detail.id}}" class="btn btn-primary fav">Ajouter Ã  mes favoris</button>
                    </div>
                </div>
            </div>
    <div class="col">
        <ul class="list-group">
            <li class="list-group-item">Name: <h5 class="card-title">{{character_detail.name}}</h5></li>
            <li class="list-group-item">Description: <h5 class="card-title">{{character_detail.description}}</h5></li>
            <li class="list-group-item">Nombre de Comics: <h5 class="card-title">{{character_detail.comics|length}}</h5></li>
            <li class="list-group-item">Titre des 3 premiers Comics: 
                <ul>
                    {% for comic in character_detail.comics|slice(0, 3) %}
                        <li>{{ comic }}</li>
                    {% endfor %}
                </ul>
            </li>
        </ul>
    </div>
  </div>
</div>
</div>


{% endblock %}
